                    <label for="psw"><b>Password</b></label>
                    <input type="password" placeholder="Enter Password" name="psw" required>

                    <button class = "sbmtbtn" type="submit">Login</button>
                    <label>
                        <input type="checkbox" checked="checked" name="remember"> Remember me
                    </label>
                </div>

                <div class="container" style="background-color:#f1f1f1">
                    <button type="button" onclick="document.getElementById('id01').style.display='none'"
                        class="sbmtbtn cancelbtn">Cancel</button>
                    <span class="psw">Forgot <a href="#">password?</a></span>
                </div>
            </form>
        </div>
{{!-- -------------------Sign up------------------------ --}}
<div id="id02" class="modal">
            <form class="modal-content animate" action="/user/login" method="post">
                <div class="imgcontainer">
                    <span onclick="document.getElementById('id02').style.display='none'" class="close"
                        title="Close Modal">&times;</span>
                    <img src="/images/img_avatar2.png" alt="Avatar" class="avatar">
                    <hr>
                    <label for="img">upload personal image</label>
                    <input type="file" name="img" id="img" class="avatar ml-5"> 
                </div>
              
                <div class="container">
                    <label for="username"><b>User Name</b></label>
                    <input type="text" id= "username" placeholder="Enter User Name" name="username" required>

                    <label for="email"><b>E-Mail</b></label>
                    <input type="email" id = "email" placeholder="Enter E-Mail" name="emial" required>

                    <label for="age"><b>age</b></label>
                    <input type="number" id="age" placeholder="Enter age" name="age" required>

                    <label for="password"><b>Password</b></label>
                    <input type="password" id="password" placeholder="Enter Password" name="passwrod" required>

                    <button class = "sbmtbtn" type="submit">Signup</button>
                    <label>
                        <input type="checkbox" checked="checked" name="remember"> Remember me
                    </label>
                </div>

                <div class="container" style="background-color:#f1f1f1">
                    <button type="button" onclick="document.getElementById('id02').style.display='none'"
                        class="sbmtbtn cancelbtn">Cancel</button>
                    <span class="psw">Forgot <a href="#">password?</a></span>
                </div>
            </form>
        </div>

        <script>
            // Get the modal
            var modal = document.getElementById('id01');
            var modal2 = document.getElementById('id02');
        
            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function (event) {
                if (event.target == modal || event.target == modal2  ) {
                    modal.style.display = "none";
                    modal2.style.display = "none";
                }
            }
